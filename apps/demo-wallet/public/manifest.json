{
  "manifest_version": 3,
  "name": "TON Wallet Demo",
  "version": "0.0.0",
  "description": "A demo TON wallet browser extension",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "TON Wallet Demo",
    "default_icon": {
      "16": "vite.svg",
      "32": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  "icons": {
    "16": "vite.svg",
    "32": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
